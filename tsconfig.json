{
  "compilerOptions": {
    "outDir": "./tmp/typescript-ignore/",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "lib": ["dom","es5", "scripthost", "es2015.promise"],
    "paths": { "*": [ "./types/*"] },
    "typeRoots" : [
      "node_modules/@types",
      "./types"],
  }
}