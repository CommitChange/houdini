{
  "compilerOptions": {
    "outDir": "./tmp/typescript-ignore/",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2015",
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "lib": ["dom","es5", "scripthost", "ES2015"],
    "paths": { "*": [ "./types/*"] },
    "typeRoots" : [
      "node_modules/@types",
      "./types"],
    "esModuleInterop": true
  }
}